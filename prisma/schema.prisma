generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enum for user roles
// ADMIN = 1 (full access to admin panel and all actions)
// USER  = 2 (can view posts, like, comment if logged in)
enum Role {
  ADMIN @map("1")
  USER  @map("2")
}

model User {
  id        BigInt   @id @default(autoincrement()) // Primary key as BIGINT for scalability
  name      String                                // Full name of the user
  email     String   @unique                      // Unique email for login
  password  String                                // Hashed password
  phone     String   @unique                      // Unique phone number
  role      Role     @default(USER)                // Role of the user (1=Admin, 2=User)
  createdAt DateTime @default(now())               // Account creation timestamp
}




